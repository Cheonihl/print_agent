{
    "name": "ribbon-print-agent",
    "version": "1.0.0",
    "description": "Local Print Agent for Ribbon Web App",
    "main": "dist/main.js",
    "scripts": {
        "start": "electron .",
        "build": "tsc && cp src/index.html dist/ && cp src/style.css dist/ && cp -r src/print/templates dist/print/ && cp -r src/assets dist/ && sed -i '' '/Object.defineProperty(exports/d' dist/renderer.js",
        "rebuild": "node-gyp rebuild",
        "build:addon": "node-gyp rebuild",
        "build:ts": "tsc",
        "test": "echo \"Error: no test specified\" && exit 1",
        "install": "node-gyp rebuild",
        "dist": "npm run build && electron-builder"
    },
    "build": {
        "appId": "com.ribbon.printagent",
        "productName": "Ribbon Agent",
        "directories": {
            "output": "dist-package"
        },
        "files": [
            "dist/**/*",
            "src/assets/**/*"
        ],
        "mac": {
            "category": "public.app-category.utilities",
            "target": "dmg",
            "icon": "src/assets/icon.png"
        },
        "win": {
            "target": "nsis",
            "icon": "src/assets/icon.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    },
    "author": "Ribbon",
    "license": "ISC",
    "dependencies": {
        "bindings": "^1.5.0",
        "body-parser": "^1.20.2",
        "cors": "^2.8.5",
        "dotenv": "^16.6.1",
        "express": "^4.18.2",
        "mustache": "^4.2.0",
        "node-addon-api": "^7.1.0"
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.2",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/mustache": "^4.2.5",
        "@types/node": "^20.10.0",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "node-gyp": "^10.0.1",
        "typescript": "^5.3.2"
    },
    "gypfile": true
}